apiVersion: v1
kind: PersistentVolume
metadata:
  name: masktv-mysql-pv
  labels:
    app: masktv-mysql
spec:
  capacity:
    storage: 8Gi
  accessModes:
    - ReadWriteMany
  storageClassName: aws-ebs
  awsElasticBlockStore:
    volumeID: <db-volume-id>
    fsType: ext4
  persistentVolumeReclaimPolicy: Recycle
